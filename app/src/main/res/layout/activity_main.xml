<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/background">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share Journey"
        android:id="@+id/safety"
        android:clickable="true"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="0.6"
        android:padding="10dip"
        android:background="@drawable/abc"
        android:layout_alignTop="@+id/debug"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/sos"
        android:layout_toEndOf="@+id/sos" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sos"
        android:src="@drawable/help_button"
        android:clickable="true"
        android:background="#00000000"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/debug2"
        android:layout_alignEnd="@+id/debug2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Track A Cab"
        android:id="@+id/track"
        android:clickable="true"
        android:enabled="true"
        android:focusable="false"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="0.6"
        android:padding="10dip"
        android:background="@drawable/abc"
        android:layout_alignBottom="@+id/debug2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/sos"
        android:layout_toEndOf="@+id/sos" />






    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/debug"
        android:layout_above="@+id/sos"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:enabled="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/debug2"
        android:layout_below="@+id/sos"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:enabled="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WHERE AM I "
        android:id="@+id/lcn"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="0.6"
        android:padding="10dip"
        android:background="@drawable/abc"
        android:layout_alignRight="@+id/lcn"
        android:layout_alignEnd="@+id/lcn"

        android:layout_toRightOf="@+id/sos"
        android:layout_toEndOf="@+id/sos" />
</RelativeLayout>
